<!--レビュー一覧表示-->
<div class="container">
  <div class="row mt-5">
      <% @reviews.each do |review| %>
      <div class="col-sm-5 offset-sm-1 mb-5">
        <%= link_to review_path(review.id) do %>
          <%= attachment_image_tag review, :image, :fill, 170, 100, fallback: "22047646_s.jpg", size: "170x100" %>
          <p>店名：<%= review.shop_name %></p>
        <% end %>
        <p>評価</p>
        <div class="review-evaluation" data-score="<%= review.evaluation %>"></div>
        <%= link_to user_path(review.user.id) do %>
        <p>ユーザー名：<%= review.user.name %></p>
        <% end %>
        <p><%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %></p>
        <% review.tags.each do |tag| %>
          <%= link_to tag_reviews_path(tag.id) do %>
            <%= tag.tag_name %>
          <% end %>
        <% end %>
      </div>
      <% end %>
      
      <script>
        $('.review-evaluation').raty({
          readOnly: true,
          score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets/'
        });
      </script>
    </div>
  </div>
  
  <!--ページャ機能-->
  <%= paginate @reviews %>
</div>