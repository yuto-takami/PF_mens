<div class="container">
  <div class="row mb-4 text-center">
    <div class="col-sm-12">
      <h4>タグが<strong><%= "#{@tag.tag_name}" %></strong>の投稿一覧</h4>
    </div>
  </div>

  <div class="row">
    <% @review.each do |review| %>
    <div class="col-sm-4 mb-5 text-center">
      <%= link_to review_path(review.id) do %>
        <%= attachment_image_tag review, :image, :fill, 250, 150, fallback: "22047646_s.jpg", size: "250x150" %>
        <p class="text">店名：<%= review.shop_name %></p>
      <% end %>
      <div>評価</div>
      <div class="review-evaluation" data-score="<%= review.evaluation %>"></div>
      <%= link_to user_path(review.user.id) do %>
      <p class="text"><i class="fas fa-user-edit"></i><%= review.user.name %></p>
      <% end %>
      <i class="far fa-comment-dots"></i>
      <%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %>
      <div>
        <% review.tags.each do |tag| %>
        <i class="far fa-bookmark"></i>
          <%= link_to tag_reviews_path(tag.id) do %>
            <%= tag.tag_name %>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>

    <script>
    $('.review-evaluation').empty();
      $('.review-evaluation').raty({
        readOnly: true,
        score: function() {
          return $(this).attr('data-score');
        },
        path: '/assets/'
      });
    </script>
  </div>

  <!--ページャ機能-->
  <%= paginate @reviews %>
</div>