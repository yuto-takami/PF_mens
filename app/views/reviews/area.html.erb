<!--イメージマップからの絞り込みページ-->
<div class="container">
  <div class="row mb-4 text-center">
    <div class="col-sm-12">
      <h4><%= @area_name %>のレビュー</h>
    </div>
  </div>

  <div class="row">
    <% if @reviews.exists? %>
      <%= render 'reviews/review', reviews: @reviews %>
    <% else %>
    <div class="row text-center">
      <div class="font col-sm-12">
        <h5>投稿レビューはありません</h5>
      </div>
    </div>
    <% end %>
  </div>

  <!--ページャ機能-->
  <%= paginate @reviews %>
</div>
