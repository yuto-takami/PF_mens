<% if review.favorited_by?(current_user) %>
  <p>
    <%= link_to review_favorites_path(review), method: :delete, remote: true do %>
      ♥<%= review.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to review_favorites_path(review), method: :post, remote: true do %>
      ♡<%= review.favorites.count %> いいね
    <% end %>
  </p>
<% end %>