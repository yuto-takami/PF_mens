<div class="container">
  <div class="row text-center">
    <div class="col-sm-12">
      <h4>新規登録</h4>
    </div>
  </div>
  
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!--ユーザー登録名前--><!--ユーザー登録メールアドレス--><!--ユーザー登録パスワード--><!--ユーザー登録パスワード確認用-->
    <div class="row signup">
      <div class="col-sm-9 offset-sm-3">
        <table class="table-borderless-signup">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>パスワード
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
            <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td>パスワード確認</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>
      </div>
    </div>
  
    <div class="row text-center">
      <div class="col-sm-12 mt-3">
        <%= f.submit "新規登録", class:"btn btn-primary col-sm-2" %>
      </div>
    </div>
  <% end %>
  
  <!--<%= render "devise/shared/links" %>-->
</div>