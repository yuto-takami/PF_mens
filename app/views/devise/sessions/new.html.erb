<!--ログイン機能-->
<div class="container">
  <div class="row text-center">
    <div class="col-sm-12">
      <h4>ログイン</h4>
    </div>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <!--ログイン時の名前認証--><!--ログイン時のパスワード認証-->
    <div class="row login">
      <div class="col-sm-8 offset-sm-4">
        <table class="table-borderless-login">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        </table>
      </div>
    </div>
    
    <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->
  
    <div class="row text-center">
      <div class="col-sm-12 mt-3">
        <%= f.submit "ログイン", class:"btn btn-primary col-sm-2" %>
      </div>
    </div>
  <% end %>
  
  <!--<%= render "devise/shared/links" %>-->
</div>
