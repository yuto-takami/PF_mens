<!--トップページ-->
<div class="container">
  <div class="row mb-5 d-flex align-items-center text-center">
    <div class="col-sm-6">
      <h3 class="top-text pt-5 py-1">
        ラーメンを食べるのが好き！</br>
        美味しいラーメンを探したい！</br>
        お店のラーメンの味が知りたい！</br>
        </br>
        そんなあなたの力になります
      </h3>
      <p class="about">※ログインしないとレビューの投稿・編集・削除、いいね、フォロー機能は使用できません</p>
    </div>
    <div class="slide col-sm-6">
      <img src="/assets/4647665_s.jpg" alt="">
      <img src="/assets/4919466_s.jpg" alt="">
      <img src="/assets/5193999_s.jpg" alt="">
    </div>
  </div>
  
  <div class="row mb-4 text-center">
    <div class="col-sm-12">
      <h4>人気レビューランキング</h4>
    </div>
  </div>
 
  <!--ランキングのレビュー表示-->
  <div class="row text-center">
  <% @all_ranks.each.with_index(1) do |review, i| %>
    <div class="men col-sm-4 mb-5">
      <p class="rank">
        <i class="fas fa-crown"></i>
        第<%= i %>位
      </p>
      <%= link_to review_path(review.id) do %>
        <%= attachment_image_tag review, :image, :fill, 170, 100, fallback: "22047646_s.jpg", size: "170x100" %>
        <p class="text">店名：<%= review.shop_name %></p>
      <% end %>
      <div>評価</div>
      <div class="review-evaluation" data-score="<%= review.evaluation %>"></div>
      <%= link_to user_path(review.user.id) do %>
      <p class="text"><i class="fas fa-user-edit"></i><%= review.user.name %></p>
      <% end %>
      <div><%= attachment_image_tag review.user, :profile_image, :fill, 40, 40, fallback: "20200503_noimage.jpg", size: "40x40" %></div>
      <i class="far fa-comment-dots"></i>
      <%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %>
      <div>
        <% review.tags.each do |tag| %>
        <i class="far fa-bookmark"></i>
          <%= link_to tag_reviews_path(tag.id) do %>
            <%= tag.tag_name %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
