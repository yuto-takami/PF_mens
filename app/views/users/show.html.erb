<h3 class="profile-name"><%= @user.name %></h3>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

<!--プロフィール編集-->
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<!--自身の投稿-->
<% @reviews.each do |review| %>
<div>
  <%= link_to review_path(review.id) do %>
    <%= attachment_image_tag review, :image, :fill, 170, 100, fallback: "22047646_s.jpg", size: "170x100" %>
    <p>店名：<%= review.shop_name %></p>
  <% end %>
  <p>ユーザーネーム：<%= review.user.name %></p>
  <p><%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %></p>
</div>
<% end %>

<!--ページャ機能-->
<%= paginate @review %>