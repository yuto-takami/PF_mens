<h3 class="profile-name"><%= @user.name %></h3>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

<!--フォローフォロワー機能--><!--プロフィール編集-->
<div>
  フォロー
  <%= link_to user_followings_path(@user) do %>
    <%= @user.followings.count %>
  <% end %>
</div>
<div>
  フォロワー
  <%= link_to user_followers_path(@user) do %>
    <%= @user.followers.count %>
  <% end %>
</div>
<% if @user == current_user %>
  <%= link_to "", edit_user_path(@user), class: 'fas fa-user-cog btn btn-outline-dark' %>
<% end %>
<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <button type="button" class="btn btn-success text-muted">
      <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
    </button>
  <% else %>
    <button type="button" class="btn btn-success text-white">
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
    </button>
  <% end %>
<% end %>

<!--自身の投稿-->
<% @reviews.each do |review| %>
<div>
  <%= link_to review_path(review.id) do %>
    <%= attachment_image_tag review, :image, :fill, 170, 100, fallback: "22047646_s.jpg", size: "170x100" %>
    <p>店名：<%= review.shop_name %></p>
  <% end %>
  <p>ユーザーネーム：<%= review.user.name %></p>
  <p><%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %></p>
</div>
<% end %>

<!--ページャ機能-->
<%= paginate @reviews %>